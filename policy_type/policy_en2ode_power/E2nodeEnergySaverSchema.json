{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Extended gNB Energy Policy with e2node Radio Power",
  "description": "Energy Efficiency Index Policy including e2node Radio Power",
  "type": "object",
  "properties": {
    "E2NodeList": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "mcc": {
            "type": "integer",
            "description": "Mobile Country Code"
          },
          "mnc": {
            "type": "integer",
            "description": "Mobile Network Code"
          },
          "nodebid": {
            "type": "integer",
            "description": "NodeB Identifier"
          },
          "radioPower": {
            "type": "number",
            "description": "Radio power of the e2node, specified in dBm as per O-RAN specifications. Assuming power cannot be negative; adjust as per actual spec.",
            "minimum": 0
          }
        },
        "required": [
          "mcc",
          "mnc",
          "nodebid",
          "radioPower"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "E2NodeList"
  ],
  "additionalProperties": false
}